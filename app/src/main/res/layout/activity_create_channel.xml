<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.kabelskevalley.doegel.stroke.CreateChannelActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name des Kanals"
        android:id="@+id/e_ChannelName"
        android:layout_alignBottom="@+id/e_ChannelThumbnail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="URL von Thumbnail"
        android:id="@+id/e_ChannelThumbnail"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="178dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neuen Kanal erstellen"
        android:id="@+id/b_createChannel"
        android:layout_below="@+id/e_ChannelName"
        android:layout_marginTop="58dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_newChannelPicture"
        android:layout_alignLeft="@+id/e_ChannelThumbnail"
        android:layout_alignStart="@+id/e_ChannelThumbnail"
        android:layout_alignRight="@+id/e_ChannelThumbnail"
        android:layout_alignEnd="@+id/e_ChannelThumbnail"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/e_ChannelName" />

</RelativeLayout>
